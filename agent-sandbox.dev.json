{
  "$schema": "./agent-sandbox.schema.json",
  "version": 1,
  "image": {
    "name": "pi-agent-bun:dev",
    "build": {
      "context": ".",
      "dockerfile": "container/Dockerfile.dev",
      "buildIfMissing": true
    }
  },
  "container": {
    "workdir": "/workspace",
    "readOnlyRootFs": true,
    "interactive": true,
    "tty": true,
    "tmpfs": [
      "/tmp"
    ],
    "resources": {
      "memory": "2g",
      "cpus": 2,
      "pidsLimit": 256
    },
    "network": {
      "mode": "bridge"
    }
  },
  "mounts": [
    {
      "source": ".",
      "target": "/workspace",
      "mode": "ro"
    },
    {
      "source": "./output",
      "target": "/workspace/output",
      "mode": "rw",
      "createIfMissing": true
    }
  ],
  "env": {
    "passThrough": [
      "ANTHROPIC_API_KEY",
      "OPENAI_API_KEY",
      "OLLAMA_HOST"
    ],
    "set": {
      "NODE_ENV": "development"
    }
  }
}
