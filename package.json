{
  "name": "pi-agent-bun",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/run-workflow.ts",
    "compile": "bun build --compile src/run-workflow.ts --outfile dist/pi-agent-bun",
    "sandbox:install": "bun run src/sandbox/cli.ts install",
    "sandbox:launch": "bun run src/sandbox/cli.ts launch",
    "sandbox:init": "cp -n agent-sandbox.example.json agent-sandbox.json || true",
    "sandbox:compile": "bun build --compile src/sandbox/cli.ts --outfile dist/pi-agent-sandbox",
    "container:build": "docker build -t pi-agent-bun:local -f container/Dockerfile .",
    "postinstall": "bun scripts/patch-pi-config.ts"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.51.6",
    "@sinclair/typebox": "^0.34.4",
    "dotenv": "^16.4.5",
    "env-paths": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/bun": "^1.3.8"
  }
}
